#######################################################################
# File: terraform.tfvars.example
#
# Description:
#   Example Terraform variable values for AWS observability implementation.
#   Copy this file to terraform.tfvars and customize the values.
#
# Purpose:
#   Provide template configuration for different deployment scenarios
#   with sensible defaults for development and production environments.
#
# Usage:
#   cp terraform.tfvars.example terraform.tfvars
#   # Edit terraform.tfvars with your specific values
#   terraform plan -var-file="terraform.tfvars"
#######################################################################

# Project Configuration
project_name = "aws-observability-demo"
environment  = "development"  # Options: development, staging, production, testing, nonprod
aws_region   = "us-east-1"

# Networking Configuration
vpc_cidr           = "10.0.0.0/16"
availability_zones = ["us-east-1a", "us-east-1b"]

# EKS Configuration
eks_cluster_name                = "observability-cluster"
eks_node_group_instance_types   = ["t3.medium"]
eks_node_group_desired_size     = 2
eks_node_group_max_size         = 4
eks_node_group_min_size         = 1

# EC2 Configuration
ec2_instance_type         = "t3.small"
ec2_instance_count        = 2
enable_detailed_monitoring = true

# Prometheus Configuration
prometheus_workspace_alias   = "observability-prometheus"
enable_alertmanager         = true
enable_recording_rules      = true
create_default_rules        = true
prometheus_retention_days   = 150
prometheus_scrape_interval  = "30s"

# Grafana Configuration
grafana_workspace_name        = "observability-grafana"
grafana_workspace_description = "AWS Managed Grafana workspace for observability demo with EC2 and EKS monitoring"
grafana_version              = "9.4"
enable_private_grafana       = false

# Notification Configuration
notification_email = ""  # Add your email address for notifications

# CloudWatch Configuration
cloudwatch_log_retention_days = 30
enable_vpc_flow_logs         = true
enable_cloudtrail           = true

# ADOT Configuration
enable_adot_addon = true
adot_version     = "v0.88.0-eksbuild.1"

# Sample Applications
deploy_sample_apps = true

# Cost Optimization (for non-production environments)
enable_spot_instances = false  # Set to true for development/testing to save costs

# Security Configuration
allowed_cidr_blocks = ["0.0.0.0/0"]  # Restrict this in production environments
enable_encryption   = true

# Additional Tags
additional_tags = {
  Owner       = "DevOps Team"
  CostCenter  = "Engineering"
  Department  = "Platform"
  Contact     = "devops@yourcompany.com"
}

